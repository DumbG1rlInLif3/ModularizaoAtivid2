public class MiniChatBot {

    public int numeracao = 0;

    public String chatBot;

    public String saudacoes() {
        return "Olá! Eu sou o MiniChatBot, prazer em lhe conhecer. Como posso ajudar?";
    }

    public void conversar(String oqueDizer) {
        System.out.println(oqueDizer);
    }





}
